<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.chan.chandummy.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/ticket_conversation_gradient_background"
            android:minHeight="48dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:textColor="#ffffff"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="#f3f3fd"
                android:gravity="center"
                android:text="Start"
                android:textColor="#000"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first" />

            <TextView
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="#f3f3fd"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:text="Stop"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button1"
                app:layout_constraintTop_toBottomOf="@+id/first" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.chan.chandummy.VerticalDottedLine
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.chan.chandummy.customview.CustomAutoLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_gravity="start">

            <com.chan.chandummy.customview.CustomAutoTextView
                android:id="@+id/firstName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:text="11111"
                app:autoWidthEnabled="true"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:background="#ff00ff"/>

            <com.chan.chandummy.customview.CustomAutoTextView
                android:id="@+id/lastName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxWidth="100dp"
                android:text="22222"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:background="#00ff00"/>
            <com.chan.chandummy.customview.CustomAutoTextView
                android:id="@+id/thirdName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                app:autoWidthEnabled="true"
                android:text="3333333"
                android:maxLines="1"
                android:background="#ff00ff"
                android:textColor="#ffffff" />
            <com.chan.chandummy.customview.CustomAutoTextView
                android:id="@+id/fourthName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                app:autoWidthEnabled="true"
                android:text="444444444"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:background="#00ff00"/>
        </LinearLayout>
    </com.chan.chandummy.customview.CustomAutoLayout>

    <com.chan.chandummy.SyncViewProgress
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:setPercentage="30" />

    <com.chan.chandummy.DashedLineView
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="78dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.chan.chandummy.DashedLineView
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="78dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
